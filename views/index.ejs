<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>

  <body>
    <!-- this runs on the server -->

    <!-- including the relative path we want to retrieve from (the nav component) --> 
    <%- include('./partials/nav.ejs') %>

    <div class="blogs content">
      <h2>All Blogs</h2>
      <!-- blog content to be changed dynamically -->
      <!-- code below will only be executed when there is more than one blog -->
      <% if (blogs.length > 0) { %> 
        <% blogs.forEach(blog => { %>
          <h3 class="title"><%= blog.title %></h3>
          <p class="snippet"><%= blog.snippet %></p>
        <% }) %>
      <% } else { %>
        <p>There are no blogs to display.</p>
      <% } %>
    </div>

    <%- include('./partials/footer.ejs') %>
  </body>
</html>
